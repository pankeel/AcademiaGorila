<!--                android:textStyle="bold"-->
<!--                android:textAppearance="@style/TextAppearance.AppCompat.Large"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_alignParentRight="true"/>-->
        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>